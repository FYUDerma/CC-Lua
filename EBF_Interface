-- Find the GregTech Electrical Blast Furnace (EBF) peripheral
local peripheral = require("peripheral")
local term = require("term")
local ebf = peripheral.find("gregtech:electrical_blast_furnace")

if not ebf then
    print("EBF not found! Check the connection.")
    return
end

-- Function to display the current status of the EBF
local function displayStatus()
    -- Fetch the energy details from the EBF
    local energy = ebf.getEnergyStored() or 0
    local maxEnergy = ebf.getMaxEnergy() or 0

    -- Check if the EBF is actively running
    local isActive = ebf.isActive()

    -- Fetch the progress if the EBF provides it
    local progress = ebf.getProgress() or "N/A"

    -- Clear the screen and display the information neatly
    term.clear()
    term.setCursorPos(1, 1)
    print("=== GregTech Electrical Blast Furnace ===")
    print("Energy: " .. energy .. " / " .. maxEnergy)
    print("Progress: " .. progress .. "%")
    print("State: " .. (isActive and "Running" or "Idle"))
end

-- Main loop to continuously monitor the EBF
while true do
    displayStatus()
    os.execute("sleep 2")  -- Refresh every 2 seconds using os.execute
end
